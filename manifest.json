{
  "name": "Drag to Scroll",
  "short_name": "Drag2Scroll",
  "version": "1.0.3",
  "description": "Drag the mouse to scroll the page.",
  "icons": {"128": "icon.png"},
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["main.js"],
    "run_at": "document_start",
    "all_frames": true}],
  "background": { "scripts": ["background.js"] },
  "web_accessible_resources": ["cursor.png"],
  "permissions": ["<all_urls>", "storage", "tabs"],
  "options_page": "config.html",
  "manifest_version": 2,
  "minimum_chrome_version": "60"
}
